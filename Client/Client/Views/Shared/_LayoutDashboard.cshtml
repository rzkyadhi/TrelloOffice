@if(User.Identity.IsAuthenticated)
{
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
}
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
  <meta name="author" content="Creative Tim">
  <title>@ViewData["Title"]</title>
  <!-- Datatables -->
  <link rel="stylesheet" href="~/lib/dashboard/vendor/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
  <link rel="stylesheet" href="~/lib/dashboard/vendor/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css">
  <link rel="stylesheet" href="~/lib/dashboard/vendor/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css">
  <!-- Favicon -->
  <link rel="icon" href="~/img/landingpage/favicon.png">
  <!-- Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
  <!-- Icons -->
  <link rel="stylesheet" href="~/lib/dashboard/vendor/nucleo/css/nucleo.css" type="text/css">
  <link rel="stylesheet" href="~/lib/dashboard/vendor/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
  <!-- Page plugins -->
  <!-- Argon CSS -->
  <link rel="stylesheet" href="~/css/dashboard/argon.css?v=1.2.0" type="text/css">
  
</head>

<body>
  <!-- Sidenav -->
  <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
    <div class="scrollbar-inner">
      <!-- Brand -->
      <div class="sidenav-header  align-items-center">
          <a class="navbar-brand" href="javascript:void(0)">
            <img src="~/img/metrodata.png" class="" alt="...">
          </a>
      </div>
      <div class="navbar-inner">
        <!-- Collapse -->
        <div class="collapse navbar-collapse" id="sidenav-collapse-main">
          <!-- Nav items -->
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link @(ViewData["Title"] == "Dashboard" ? "active" : "" )" asp-controller="dashboard">
                <i class="ni ni-tv-2 text-primary"></i>
                <span class="nav-link-text">Dashboard</span>
              </a>
            </li>
            @if(User.IsInRole("Manager"))
            {
            <li class="nav-item">
              <a class="nav-link @(ViewData["Title"] == "Project" ? "active" : "" )" asp-controller="Project">
                <i class="ni ni-app text-primary"></i>
                <span class="nav-link-text">Project</span>
              </a>
            </li>
            }
            <li class="nav-item">
              <a class="nav-link @(ViewData["Title"] == "Task" ? "active" : "" )" asp-controller="Task">
                <i class="ni ni-check-bold text-primary"></i>
                <span class="nav-link-text">Task</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <!-- Main content -->
  <div class="main-content" id="panel">
    <!-- Topnav -->
    <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Navbar links -->
          <ul class="navbar-nav align-items-center  ml-md-auto ">
            <li class="nav-item d-xl-none">
              <!-- Sidenav toggler -->
              <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </div>
            </li>
            <li class="nav-item d-sm-none">
              <a class="nav-link" href="#" data-action="search-show" data-target="#navbar-search-main">
                <i class="ni ni-zoom-split-in"></i>
              </a>
            </li>
          </ul>
          <ul class="navbar-nav align-items-center  ml-auto ml-md-0 ">
            <li class="nav-item dropdown">
              <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="media align-items-center">
                  <div class="media-body  ml-2  d-none d-lg-block">
                      @if (User.Identity.IsAuthenticated)
                     {
                        <span class="mb-0 text-sm  font-weight-bold">@HttpContextAccessor.HttpContext.Session.GetString("Email")</span>
                     }
                  </div>
                </div>
              </a>
              <div class="dropdown-menu  dropdown-menu-right ">
                <div class="dropdown-header noti-title">
                  <h6 class="text-overflow m-0">Welcome!</h6>
                </div>
                <div class="dropdown-divider"></div>
                <a asp-action="Logout" asp-controller="Account" class="dropdown-item">
                  <i class="ni ni-user-run"></i>
                  <span>Logout</span>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Header -->
    <!-- Header -->
    <!-- Page content -->
    @RenderBody()
  </div>
  <!-- Argon Scripts -->
  <!-- Core -->
  <script src="~/lib/dashboard/vendor/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/dashboard/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/dashboard/vendor/js-cookie/js.cookie.js"></script>
  <script src="~/lib/dashboard/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
  <script src="~/lib/dashboard/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
  <!-- Optional JS -->
  <script src="~/lib/dashboard/vendor/chart.js/dist/Chart.min.js"></script>
  <script src="~/lib/dashboard/vendor/chart.js/dist/Chart.extension.js"></script>
  <!-- Argon JS -->
  <script src="~/js/dashboard/argon.js?v=1.2.0"></script>
  
</body>

</html>
@RenderSection("Scripts", required: false)