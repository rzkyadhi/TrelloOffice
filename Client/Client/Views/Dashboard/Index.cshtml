@{
    Layout = "_LayoutDashboard";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<p>
    @HttpContextAccessor.HttpContext.Session.GetString("Email")
</p>
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
              <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            </ol>
          </nav>
        </div>
      </div>
      <!-- Card stats -->
      <div class="row">
        <div class="col-xl-4 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalProject">
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                    <i class="ni ni-app"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Project</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-4 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalTask">

                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                    <i class="ni ni-shop"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Task</span>
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-xl-4 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalTaskDone">

                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                    <i class="ni ni-shop"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Task Done</span>
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
  <div class="row">
    <div class="col-xl-6">
      <div class="card">
        <div class="card-header bg-transparent">
          <div class="row align-items-center">
            <div class="col">
              <h6 class="text-uppercase text-muted ls-1 mb-1">Pie Chart</h6>
              <h5 class="h3 mb-0">Total Product Per Supplier</h5>
            </div>
            <div class="col">
              <ul class="nav nav-pills justify-content-end">
                <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                  <i class="ni ni-chart-pie-35"></i>
                </div>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body">
          <!-- Chart -->
          <div class="chart">
            <canvas id="myChart" style="width: 577px; height: 300px;"></canvas>
          </div>
          <a id="downloadPieChart" download="PieChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="col-xl-6">
      <div class="card">
        <div class="card-header bg-transparent">
          <div class="row align-items-center">
            <div class="col">
              <h6 class="text-uppercase text-muted ls-1 mb-1">Bar Chart</h6>
              <h5 class="h3 mb-0">Total Task per Date</h5>
            </div>
            <div class="col">
              <ul class="nav nav-pills justify-content-end">
                <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                  <i class="ni ni-chart-bar-32"></i>
                </div>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body">
          <!-- Chart -->
          <div class="chart">
            <!-- Chart wrapper -->
            <canvas id="barChart" class="chart-canvas"></canvas>
          </div>
          <a id="downloadBarChart" download="BarChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
@section Scripts
{
    @if (User.IsInRole("Manager"))
    {
        <script src="~/js/dashboardManager.js"></script>
        <script>
            $.ajax({
                url: "https://localhost:44335/task/GetJSON"
            }).done((result) => {
                let totalTask =
                    `
                    <h5 class="card-title text-uppercase text-muted mb-0">Total Task</h5>
                    <span class="h2 font-weight-bold mb-0">${result.data.length}</span>
                    `;
                $("#totalTask").html(totalTask);
                let totalDone = 0;
                for (let i = 0; i < result.data.length; i++) {
                    if (result.data[i].IsCompleted == true) {
                        totalDone += 1
                    }
                }
                let totalTaskDone =
                    `
                    <h5 class="card-title text-uppercase text-muted mb-0">Total Task Done</h5>
                    <span class="h2 font-weight-bold mb-0">${totalDone}</span>
                    `;
                $("#totalTaskDone").html(totalTaskDone);
            })
        </script>
        
    };
        
}